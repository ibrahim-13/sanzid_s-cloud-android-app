<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sanzidblog.arshad.sohojweb.net.sanzidscloud.About">

    <TextView
        android:id="@+id/about_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="About"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/about_title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_title_text"
        android:layout_centerHorizontal="true"
        android:text="Dedicated app to view\nSanzid's Cloud Blog\nwww.sanzidkawsar.us"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/about_title_developed_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_title_description"
        android:layout_centerHorizontal="true"
        android:text="Developed By:"
        android:textStyle="italic"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_title_developed_by"
        android:layout_centerHorizontal="true"
        android:text="MD. Ibrahim Khan\nEmail: ib.arshad777@gamil.com\nCo-Founder: SohojWeb.net"
        android:textAlignment="center"
        android:textSize="20dp"/>
</RelativeLayout>
